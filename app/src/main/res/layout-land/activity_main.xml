<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/quiz_main_icon"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:id="@+id/app_logo"
                android:layout_marginEnd="100dp"
                android:contentDescription="@string/quiz_app_icon_text"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="100dp"
                android:gravity="center">
                <Button
                    android:id="@+id/score_board"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/score_board_button_text" />
                <Button
                    android:id="@+id/setting_button_main_screen"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_button_text" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/choose_subject_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="start"
            android:text="@string/choose_a_subject"
            android:textAllCaps="true"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:baselineAligned="false">
            <LinearLayout
                android:id="@+id/basic_computer_quiz_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/main_round_back_subject_icon_10">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/basic_computer_icon"
                    android:contentDescription="@string/basic_computer_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/basic_computer_string"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/math_quiz_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/main_round_back_subject_icon_10">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/math_icon_description"
                    android:src="@drawable/main_math_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/math_string"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>



